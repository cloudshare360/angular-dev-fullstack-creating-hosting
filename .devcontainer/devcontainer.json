{
  "name": "Angular 9 Development",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-18-bullseye",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shellArgs.linux": ["-l"]
      },
      "extensions": [
        "streetsidesoftware.code-spell-checker",
        "Angular.ng-template"
      ]
    }
  },

  "forwardPorts": [4200],

  "portsAttributes": {
    "4200": {
      "label": "Angular Dev Server",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "bash -c 'source /usr/local/share/nvm/nvm.sh && nvm install 12.22.12 && nvm use 12.22.12 && npm install -g @angular/cli@9.1.15 && echo \"nvm use 12.22.12\" >> ~/.bashrc'",

  "remoteUser": "node",

  "containerEnv": {
    "NODE_VERSION": "12.22.12",
    "PATH": "/usr/local/share/nvm/versions/node/v${NODE_VERSION}/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin",
    "NG_CLI_VERSION": "9.1.15"
  }
}
