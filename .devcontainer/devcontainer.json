{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "12"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "angular.ng-template",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eg2.vscode-npm-script"
      ]
    }
  },
  "portsAttributes": {
    "4200": {
      "label": "Angular App",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    4200
  ],
  "remoteUser": "codespace"
}
